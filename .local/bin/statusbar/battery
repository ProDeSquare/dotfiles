#!/bin/sh

capacity=$(cat /sys/class/power_supply/BAT0/capacity)

if [ $capacity -le 15 ]; then
        icon="ï–‚"
elif [ $capacity -gt 15 -a $capacity -le 40 ]; then
        icon="ï•»"
elif [ $capacity -gt 40 -a $capacity -le 60 ]; then
        icon="ï•½"
else
        icon="ï–€"
fi

# status=$(sed "s/[Dd]ischarging/ï‰/;s/[Nn]ot charging/ğŸ›‘/;s/[Cc]harging/ïƒ§/;s/[Uu]nknown/?/;s/[Ff]ull/ï‰€/" /sys/class/power_supply/BAT0/status)
# status=$(sed "s/[Dd]ischarging/ï–€/;s/[Nn]ot charging/ğŸ›‘/;s/[Cc]harging/ïƒ§/;s/[Uu]nknown/?/;s/[Ff]ull/ï•¸/" /sys/class/power_supply/BAT0/status)
status=$(sed "s/[Dd]ischarging/$icon/;s/[Nn]ot charging/ğŸ›‘/;s/[Cc]harging/ïƒ§/;s/[Uu]nknown/?/;s/[Ff]ull/ï•¸/" /sys/class/power_supply/BAT0/status)

printf "%s%s%s%s\n" "$status " "$capacity" "% "
# printf %s%s%s%s% "$status " "$capacity" "% "  "($(acpi | awk -F', ' '{print $3}')) "
